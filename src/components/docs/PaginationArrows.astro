---
import SimpleButton from "@/components/fundations/elements/SimpleButton.astro";

export interface Props {
  prevPage?: { href: string; title: string } | null;
  nextPage?: { href: string; title: string } | null;
}

const { prevPage, nextPage } = Astro.props;
---

<div class="flex items-center gap-1">
  {
    prevPage ? (
      <SimpleButton
        href={prevPage.href}
        variant="secondary"
        size="xs"
        title={`Previous: ${prevPage.title}`}
        data-pagination-prev
        class="p-1"
      >
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="m15 18-6-6 6-6"/>
        </svg>
      </SimpleButton>
    ) : (
      <SimpleButton variant="secondary" size="xs" disabled class="p-1 opacity-50 cursor-not-allowed">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="m15 18-6-6 6-6"/>
        </svg>
      </SimpleButton>
    )
  }
  {
    nextPage ? (
      <SimpleButton
        href={nextPage.href}
        variant="secondary"
        size="xs"
        title={`Next: ${nextPage.title}`}
        data-pagination-next
        class="p-1"
      >
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="m9 18 6-6-6-6"/>
        </svg>
      </SimpleButton>
    ) : (
      <SimpleButton variant="secondary" size="xs" disabled class="p-1 opacity-50 cursor-not-allowed">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="m9 18 6-6-6-6"/>
        </svg>
      </SimpleButton>
    )
  }
</div>
