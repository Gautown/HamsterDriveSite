---
import { AstroSeo } from "@astrolib/seo";
// Assets
import Logo from "@/components/assets/Logo.astro";
// Foundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import SimpleButton from "@/components/fundations/elements/SimpleButton.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
import { siteConfig } from "@/config/site";

const canonical = `${siteConfig.url}${Astro.url.pathname === "/" ? "" : Astro.url.pathname}`;
---

<AstroSeo
  title="仓鼠驱动管家 - 现代化的 Windows 驱动管理工具"
  description="现代化的 Windows 驱动管理工具，采用 Rust 语言开发，提供直观的图形界面，帮助用户轻松管理和维护系统驱动程序。"
  canonical={canonical}
  openGraph={{
    url: canonical,
    title: "仓鼠驱动管家 - 现代化的 Windows 驱动管理工具",
    description:
      "现代化的 Windows 驱动管理工具，采用 Rust 语言开发，提供直观的图形界面，帮助用户轻松管理和维护系统驱动程序。",
    site_name: siteConfig.name,
    type: "website",
    locale: "zh_CN",
    images: [
      {
        url: siteConfig.ogImage,
        width: 1200,
        height: 630,
        alt: `${siteConfig.name} Open Graph image`,
        type: "image/jpeg",
      },
    ],
  }}
  twitter={{
    cardType: "summary_large_image",
    site: siteConfig.author.twitter,
    handle: siteConfig.author.twitter,
  }}
/>
<BaseLayout
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebSite",
    name: siteConfig.name,
    description:
      "现代化的 Windows 驱动管理工具，采用 Rust 语言开发，提供直观的图形界面，帮助用户轻松管理和维护系统驱动程序。",
    url: siteConfig.url,
    publisher: {
      "@type": "Organization",
      name: siteConfig.name,
      url: siteConfig.url,
      logo: {
        "@type": "ImageObject",
        url: siteConfig.ogImage,
      },
    },
    sameAs: [siteConfig.author.twitter],
  }}
>
  <!-- Hero Section -->
  <section>
    <Wrapper
      class="standard"
      class="py-8 sm:py-12 lg:py-16 lg:h-[calc(100vh-11.5rem)] flex flex-col justify-center"
    >
      <div class="max-w-4xl text-center mx-auto text-balance">
        <Logo class="size-12 sm:size-16 lg:size-24 mx-auto" />
        <Text
          tag="h1"
          variant="textXL"
          class="font-medium tracking-tight mt-4 sm:mt-6 lg:mt-8 text-3xl sm:text-4xl lg:text-5xl"
        >
          仓鼠驱动管家
        </Text>
        <Text
          tag="h2"
          variant="textLg"
          class="font-medium tracking-tight mt-2 sm:mt-3 lg:mt-4 text-lg sm:text-xl lg:text-2xl"
        >
          让驱动管理变得简单高效
        </Text>
        <Text tag="p" variant="textBase" class="text-muted-foreground mt-4 sm:mt-6 lg:mt-8 max-w-2xl mx-auto text-sm sm:text-base lg:text-lg">
          现代化的 Windows 驱动管理工具，采用 Rust 语言开发，提供直观的图形界面，
          帮助用户轻松管理和维护系统驱动程序，确保硬件设备正常运行。
        </Text>

        <div class="flex flex-col sm:flex-row flex-wrap items-center gap-3 sm:gap-4 mt-8 sm:mt-10 lg:mt-12 justify-center">
          <SimpleButton href="/docs/installation" size="default" class="w-full sm:w-auto px-6 sm:px-8 py-4 sm:py-6 text-sm sm:text-base">
            立即下载
          </SimpleButton>
          <SimpleButton href="/docs/features" variant="outline" size="default" class="w-full sm:w-auto px-6 sm:px-8 py-4 sm:py-6 text-sm sm:text-base">
            了解功能
          </SimpleButton>
          <SimpleButton href="https://github.com/Gautown/HamsterDrivers" variant="secondary" size="default" class="w-full sm:w-auto px-4 sm:px-6 py-4 sm:py-6 text-sm sm:text-base">
            GitHub 仓库
          </SimpleButton>
        </div>
      </div>
    </Wrapper>
  </section>

  <!-- Features Section -->
  <section class="py-12 sm:py-16 lg:py-24 bg-muted/50">
    <Wrapper class="standard">
      <div class="text-center mb-8 sm:mb-12 lg:mb-16">
        <Text tag="h2" variant="textLg" class="font-medium text-xl sm:text-2xl lg:text-3xl">核心功能</Text>
        <Text tag="p" variant="textBase" class="text-muted-foreground mt-3 sm:mt-4 lg:mt-6 max-w-2xl mx-auto text-sm sm:text-base lg:text-lg">
          仓鼠驱动管家提供全面的驱动管理功能，让您的系统始终保持最佳状态
        </Text>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-6 lg:gap-8">
        <!-- Feature 1 -->
        <div class="bg-card p-4 sm:p-6 lg:p-8 rounded-lg shadow-sm border">
          <div class="w-8 h-8 sm:w-10 sm:h-10 lg:w-12 lg:h-12 bg-primary/10 rounded-lg flex items-center justify-center mb-4 sm:mb-5 lg:mb-6">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary w-4 h-4 sm:w-5 sm:h-5 lg:w-6 lg:h-6">
              <path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"></path>
              <path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"></path>
            </svg>
          </div>
          <Text tag="h3" variant="textMd" class="font-medium mb-2 sm:mb-3 text-base sm:text-lg lg:text-xl">驱动扫描与检测</Text>
          <Text tag="p" variant="textSm" class="text-muted-foreground text-xs sm:text-sm lg:text-base">
            自动扫描系统中的所有硬件设备，检测驱动程序的版本和状态，识别需要更新的驱动。
          </Text>
        </div>

        <!-- Feature 2 -->
        <div class="bg-card p-4 sm:p-6 lg:p-8 rounded-lg shadow-sm border">
          <div class="w-8 h-8 sm:w-10 sm:h-10 lg:w-12 lg:h-12 bg-primary/10 rounded-lg flex items-center justify-center mb-4 sm:mb-5 lg:mb-6">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary w-4 h-4 sm:w-5 sm:h-5 lg:w-6 lg:h-6">
              <polyline points="23 4 23 10 17 10"></polyline>
              <polyline points="1 20 1 14 7 14"></polyline>
              <path d="M3.51 9a9 9 0 0 1 14.85-3.36L23 10M1 14l4.64 4.36A9 9 0 0 0 20.49 15"></path>
            </svg>
          </div>
          <Text tag="h3" variant="textMd" class="font-medium mb-2 sm:mb-3 text-base sm:text-lg lg:text-xl">智能驱动更新</Text>
          <Text tag="p" variant="textSm" class="text-muted-foreground text-xs sm:text-sm lg:text-base">
            智能分析驱动程序版本，提供安全可靠的更新建议，一键更新所有过时驱动。
          </Text>
        </div>

        <!-- Feature 3 -->
        <div class="bg-card p-4 sm:p-6 lg:p-8 rounded-lg shadow-sm border">
          <div class="w-8 h-8 sm:w-10 sm:h-10 lg:w-12 lg:h-12 bg-primary/10 rounded-lg flex items-center justify-center mb-4 sm:mb-5 lg:mb-6">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary w-4 h-4 sm:w-5 sm:h-5 lg:w-6 lg:h-6">
              <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
            </svg>
          </div>
          <Text tag="h3" variant="textMd" class="font-medium mb-2 sm:mb-3 text-base sm:text-lg lg:text-xl">驱动备份与还原</Text>
          <Text tag="p" variant="textSm" class="text-muted-foreground text-xs sm:text-sm lg:text-base">
            自动备份当前驱动程序，在系统出现问题时快速还原，保障系统稳定性。
          </Text>
        </div>

        <!-- Feature 4 -->
        <div class="bg-card p-4 sm:p-6 lg:p-8 rounded-lg shadow-sm border">
          <div class="w-8 h-8 sm:w-10 sm:h-10 lg:w-12 lg:h-12 bg-primary/10 rounded-lg flex items-center justify-center mb-4 sm:mb-5 lg:mb-6">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary w-4 h-4 sm:w-5 sm:h-5 lg:w-6 lg:h-6">
              <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
              <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
            </svg>
          </div>
          <Text tag="h3" variant="textMd" class="font-medium mb-2 sm:mb-3 text-base sm:text-lg lg:text-xl">驱动卸载清理</Text>
          <Text tag="p" variant="textSm" class="text-muted-foreground text-xs sm:text-sm lg:text-base">
            彻底卸载不需要的驱动程序，清理残留文件，释放系统资源。
          </Text>
        </div>

        <!-- Feature 5 -->
        <div class="bg-card p-4 sm:p-6 lg:p-8 rounded-lg shadow-sm border">
          <div class="w-8 h-8 sm:w-10 sm:h-10 lg:w-12 lg:h-12 bg-primary/10 rounded-lg flex items-center justify-center mb-4 sm:mb-5 lg:mb-6">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary w-4 h-4 sm:w-5 sm:h-5 lg:w-6 lg:h-6">
              <path d="M18 8A6 6 0 0 0 6 8c0 7-3 9-3 9h18s-3-2-3-9"></path>
              <path d="M13.73 21a2 2 0 0 1-3.46 0"></path>
            </svg>
          </div>
          <Text tag="h3" variant="textMd" class="font-medium mb-2 sm:mb-3 text-base sm:text-lg lg:text-xl">系统兼容性检测</Text>
          <Text tag="p" variant="textSm" class="text-muted-foreground text-xs sm:text-sm lg:text-base">
            检测驱动与系统的兼容性，避免安装不兼容的驱动程序导致系统问题。
          </Text>
        </div>

        <!-- Feature 6 -->
        <div class="bg-card p-4 sm:p-6 lg:p-8 rounded-lg shadow-sm border">
          <div class="w-8 h-8 sm:w-10 sm:h-10 lg:w-12 lg:h-12 bg-primary/10 rounded-lg flex items-center justify-center mb-4 sm:mb-5 lg:mb-6">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary w-4 h-4 sm:w-5 sm:h-5 lg:w-6 lg:h-6">
              <circle cx="12" cy="12" r="10"></circle>
              <polyline points="12 6 12 12 16 14"></polyline>
            </svg>
          </div>
          <Text tag="h3" variant="textMd" class="font-medium mb-2 sm:mb-3 text-base sm:text-lg lg:text-xl">实时监控</Text>
          <Text tag="p" variant="textSm" class="text-muted-foreground text-xs sm:text-sm lg:text-base">
            实时监控驱动程序状态，及时提醒用户驱动异常情况，保障系统稳定运行。
          </Text>
        </div>
      </div>
    </Wrapper>
  </section>

  <!-- Advantages Section -->
  <section class="py-12 sm:py-16 lg:py-24">
    <Wrapper class="standard">
      <div class="text-center mb-8 sm:mb-12 lg:mb-16">
        <Text tag="h2" variant="textLg" class="font-medium text-xl sm:text-2xl lg:text-3xl">产品优势</Text>
        <Text tag="p" variant="textBase" class="text-muted-foreground mt-3 sm:mt-4 lg:mt-6 max-w-2xl mx-auto text-sm sm:text-base lg:text-lg">
          仓鼠驱动管家相比传统驱动管理工具的独特优势
        </Text>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 sm:gap-10 lg:gap-12 items-center">
        <div>
          <div class="space-y-6 sm:space-y-8">
            <!-- Advantage 1 -->
            <div>
              <Text tag="h3" variant="textMd" class="font-medium mb-2 sm:mb-3 text-base sm:text-lg lg:text-xl">高性能 Rust 引擎</Text>
              <Text tag="p" variant="textBase" class="text-muted-foreground text-sm sm:text-base lg:text-lg">
                采用 Rust 语言开发，提供卓越的性能和安全性，扫描速度快，系统占用低。
              </Text>
            </div>

            <!-- Advantage 2 -->
            <div>
              <Text tag="h3" variant="textMd" class="font-medium mb-2 sm:mb-3 text-base sm:text-lg lg:text-xl">直观的用户界面</Text>
              <Text tag="p" variant="textBase" class="text-muted-foreground text-sm sm:text-base lg:text-lg">
                现代化的图形界面设计，操作简单直观，即使是非技术用户也能轻松上手。
              </Text>
            </div>

            <!-- Advantage 3 -->
            <div>
              <Text tag="h3" variant="textMd" class="font-medium mb-2 sm:mb-3 text-base sm:text-lg lg:text-xl">安全可靠</Text>
              <Text tag="p" variant="textBase" class="text-muted-foreground text-sm sm:text-base lg:text-lg">
                严格的驱动程序验证机制，确保只安装经过认证的驱动，避免系统风险。
              </Text>
            </div>

            <!-- Advantage 4 -->
            <div>
              <Text tag="h3" variant="textMd" class="font-medium mb-2 sm:mb-3 text-base sm:text-lg lg:text-xl">开源免费</Text>
              <Text tag="p" variant="textBase" class="text-muted-foreground text-sm sm:text-base lg:text-lg">
                完全开源免费，社区驱动开发，持续更新改进，透明可靠。
              </Text>
            </div>
          </div>
        </div>

        <div class="bg-muted/50 p-4 sm:p-6 lg:p-8 rounded-lg">
          <Text tag="h3" variant="textMd" class="font-medium mb-4 sm:mb-6 text-base sm:text-lg lg:text-xl">技术规格</Text>
          <div class="space-y-3 sm:space-y-4">
            <div class="flex justify-between items-center pb-2 sm:pb-3 border-b">
              <Text tag="span" variant="textBase" class="text-sm sm:text-base">开发语言</Text>
              <Text tag="span" variant="textBase" class="font-medium text-sm sm:text-base">Rust</Text>
            </div>
            <div class="flex justify-between items-center pb-2 sm:pb-3 border-b">
              <Text tag="span" variant="textBase" class="text-sm sm:text-base">支持系统</Text>
              <Text tag="span" variant="textBase" class="font-medium text-sm sm:text-base">Windows 10/11</Text>
            </div>
            <div class="flex justify-between items-center pb-2 sm:pb-3 border-b">
              <Text tag="span" variant="textBase" class="text-sm sm:text-base">系统要求</Text>
              <Text tag="span" variant="textBase" class="font-medium text-sm sm:text-base">2GB 内存，50MB 磁盘空间</Text>
            </div>
            <div class="flex justify-between items-center pb-2 sm:pb-3 border-b">
              <Text tag="span" variant="textBase" class="text-sm sm:text-base">驱动数据库</Text>
              <Text tag="span" variant="textBase" class="font-medium text-sm sm:text-base">实时更新</Text>
            </div>
            <div class="flex justify-between items-center pb-2 sm:pb-3 border-b">
              <Text tag="span" variant="textBase" class="text-sm sm:text-base">网络需求</Text>
              <Text tag="span" variant="textBase" class="font-medium text-sm sm:text-base">仅更新时需要</Text>
            </div>
          </div>
        </div>
      </div>
    </Wrapper>
  </section>

  <!-- CTA Section -->
  <section class="py-12 sm:py-16 lg:py-24 bg-primary/5">
    <Wrapper class="standard">
      <div class="max-w-3xl mx-auto text-center">
        <Text tag="h2" variant="textLg" class="font-medium mb-4 sm:mb-6 text-xl sm:text-2xl lg:text-3xl">立即体验仓鼠驱动管家</Text>
        <Text tag="p" variant="textBase" class="text-muted-foreground mb-6 sm:mb-8 lg:mb-10 max-w-2xl mx-auto text-sm sm:text-base lg:text-lg">
          告别驱动管理的繁琐，让仓鼠驱动管家为您的系统保驾护航
        </Text>
        <div class="flex flex-col sm:flex-row flex-wrap items-center gap-3 sm:gap-4 justify-center">
          <SimpleButton href="/docs/installation" size="default" class="w-full sm:w-auto px-6 sm:px-8 py-4 sm:py-6 text-sm sm:text-base">
            立即下载
          </SimpleButton>
          <SimpleButton href="/docs/quickstart" variant="outline" size="default" class="w-full sm:w-auto px-6 sm:px-8 py-4 sm:py-6 text-sm sm:text-base">
            快速入门
          </SimpleButton>
        </div>
      </div>
    </Wrapper>
  </section>
</BaseLayout>
