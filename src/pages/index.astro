---
import { AstroSeo } from "@astrolib/seo";
// Assets
import Logo from "@/components/assets/Logo.astro";
// Foundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Button from "@/components/ui/button/Button.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
import { siteConfig } from "@/config/site";

const canonical = `${siteConfig.url}${Astro.url.pathname === "/" ? "" : Astro.url.pathname}`;
---

<AstroSeo
  title="Bearnie - Build your own component library"
  description="Accessible components for Astro and Tailwind CSS. Components are added to your project. You own and control the code."
  canonical={canonical}
  openGraph={{
    url: canonical,
    title: "Bearnie - Build Your Own Component Library",
    description:
      "Accessible components for Astro and Tailwind CSS. Components are added to your project. You own and control the code.",
    site_name: siteConfig.name,
    type: "website",
    locale: "en_US",
    images: [
      {
        url: siteConfig.ogImage,
        width: 1200,
        height: 630,
        alt: `${siteConfig.name} Open Graph image`,
        type: "image/jpeg",
      },
    ],
  }}
  twitter={{
    cardType: "summary_large_image",
    site: siteConfig.author.twitter,
    handle: siteConfig.author.twitter,
  }}
/>
<BaseLayout
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebSite",
    name: siteConfig.name,
    description:
      "Accessible components for Astro and Tailwind CSS. Components are added to your project. You own and control the code.",
    url: siteConfig.url,
    publisher: {
      "@type": "Organization",
      name: siteConfig.name,
      url: siteConfig.url,
      logo: {
        "@type": "ImageObject",
        url: siteConfig.ogImage,
      },
    },
    sameAs: [siteConfig.author.twitter],
  }}
>
  <section>
    <Wrapper
      class="standard"
      class="py-12 lg:h-[calc(100vh-11.5rem)] flex flex-col justify-center"
    >
      <!-- Hero Section -->
      <div class="max-w-sm text-center mx-auto text-balance">
        <Logo class="size-12 lg:size-20 mx-auto" />
        <Text
          tag="h1"
          variant="textLG"
          class="font-medium tracking-tight mt-12"
        >
          This is not a component library. <br /> This is your component library
          <Text tag="p" variant="textSM" class="text-muted-foreground mt-4">
            Accessible components for Astro and Tailwind CSS. Components are
            added to your project witht the CLI. You own and control the code.
          </Text>

          <div class="flex items-center gap-2.5 mt-12 justify-center">
            <Button href="/docs" size="default">Get Started</Button>
            <Button href="/docs/components" variant="outline" size="default"
              >Browse Components</Button
            >
          </div>
          <code class="mt-8 block text-xs text-muted-foreground font-mono">
            npx bearnie init
          </code>
        </Text>
      </div>
    </Wrapper>
  </section>
</BaseLayout>
