---
import { AstroSeo } from "@astrolib/seo";
// Assets
import Logo from "@/components/assets/Logo.astro";
// Foundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Button from "@/components/ui/button/Button.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
import { siteConfig } from "@/config/site";

const canonical = `${siteConfig.url}${Astro.url.pathname === "/" ? "" : Astro.url.pathname}`;
---

<AstroSeo
  title="仓鼠驱动管家 - 现代化的 Windows 驱动管理工具"
  description="现代化的 Windows 驱动管理工具，采用 Rust 语言开发，提供直观的图形界面，帮助用户轻松管理和维护系统驱动程序。"
  canonical={canonical}
  openGraph={{
    url: canonical,
    title: "仓鼠驱动管家 - 现代化的 Windows 驱动管理工具",
    description:
      "现代化的 Windows 驱动管理工具，采用 Rust 语言开发，提供直观的图形界面，帮助用户轻松管理和维护系统驱动程序。",
    site_name: siteConfig.name,
    type: "website",
    locale: "zh_CN",
    images: [
      {
        url: siteConfig.ogImage,
        width: 1200,
        height: 630,
        alt: `${siteConfig.name} Open Graph image`,
        type: "image/jpeg",
      },
    ],
  }}
  twitter={{
    cardType: "summary_large_image",
    site: siteConfig.author.twitter,
    handle: siteConfig.author.twitter,
  }}
/>
<BaseLayout
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebSite",
    name: siteConfig.name,
    description:
      "现代化的 Windows 驱动管理工具，采用 Rust 语言开发，提供直观的图形界面，帮助用户轻松管理和维护系统驱动程序。",
    url: siteConfig.url,
    publisher: {
      "@type": "Organization",
      name: siteConfig.name,
      url: siteConfig.url,
      logo: {
        "@type": "ImageObject",
        url: siteConfig.ogImage,
      },
    },
    sameAs: [siteConfig.author.twitter],
  }}
>
  <section>
    <Wrapper
      class="standard"
      class="py-12 lg:h-[calc(100vh-11.5rem)] flex flex-col justify-center"
    >
      <!-- Hero Section -->
      <div class="max-w-2xl text-center mx-auto text-balance">
        <Logo class="size-16 lg:size-24 mx-auto" />
        <Text
          tag="h1"
          variant="textXL"
          class="font-medium tracking-tight mt-12"
        >
          仓鼠驱动管家 <br /> 让驱动管理变得简单高效
        </Text>
        <Text tag="p" variant="textBase" class="text-muted-foreground mt-4">
          现代化的 Windows 驱动管理工具，采用 Rust 语言开发，提供直观的图形界面，
          帮助用户轻松管理和维护系统驱动程序。
        </Text>

        <div class="flex items-center gap-2.5 mt-12 justify-center">
          <Button href="/docs" size="default">开始使用</Button>
          <Button href="https://github.com/Gautown/HamsterDrivers" variant="outline" size="default"
            >GitHub 仓库</Button
          >
        </div>
        <code class="mt-8 block text-xs text-muted-foreground font-mono">
          cargo build --release
        </code>
      </div>
    </Wrapper>
  </section>
</BaseLayout>
