---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Navigation from "@/components/global/navigation/Navigation.astro";
import ThemePreview from "@/components/create/ThemePreview.astro";
import ThemeSidebar from "@/components/create/ThemeSidebar.astro";
---

<BaseLayout showFooter={false} showNavigation={false} bodyClass="bg-muted">
  <!-- Theme preview fonts (only for this page) -->
  <Fragment slot="head">
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&family=Outfit:wght@100..900&display=swap"
      rel="stylesheet"
    />
  </Fragment>
  <div class="fixed inset-0 flex flex-col 2xl:max-w-350 mx-auto bg-muted">
    <Navigation variant="docs" />
    
    <div class="relative flex flex-1 min-h-0 bg-background rounded-lg lg:rounded-2xl overflow-hidden m-2 lg:m-3 lg:mt-0 mt-0">

      <!-- Preview Area -->
      <ThemePreview />

      <!-- Right Sidebar - Theme Tools -->
      <ThemeSidebar />

    </div>
    
  </div>

  <!-- Toast -->
  <div id="toast" class="fixed bottom-4 right-4 bg-neutral-900 dark:bg-neutral-100 text-white dark:text-neutral-900 px-4 py-2 rounded-lg text-sm font-medium opacity-0 transition-opacity duration-300 pointer-events-none z-50">
    Copied!
  </div>

  <script>
    import "@/components/create/scripts/theme-controller";
  </script>
</BaseLayout>
